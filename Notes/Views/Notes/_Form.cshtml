@model Notes.Controllers.NotesController.AddNoteForm

<div class="container">
    <div class="row align-items-start">
        <h4>Create a new Note</h4>
        <form asp-action="Index" method="post">
            <div class="mb-3">
                <select asp-for="NoteTypeID" asp-items="@(new SelectList(Model.NoteTypes, "ID", "Name"))"
                    class="form-select">
                    <option selected>Please select one</option>
                </select>
            </div>
            <div class="mb-3">
                <label for="title" class="form-label">Title</label>
                <input type="text" class="form-control" id="title" name="title" placeholder="Not so important task"
                    required value="@Model.Title">
            </div>
            <div class="mb-3">
                <label for="description" class="form-label">Description</label>
                <textarea class="form-control" id="description" name="description"
                    rows="3">@Model.Description</textarea>
            </div>
            <div asp-validation-summary="All" class="text-danger"></div>
            <button type="submit" class="btn btn-primary">Save</button>
        </form>
    </div>
</div>